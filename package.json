{
  "name": "@jych/appfile-parser",
  "version": "0.0.0",
  "description": "Parse appfiles",
  "author": "James Young <hello@jamesyoung.ch>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "node ./build",
    "build": "tsc",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "pretty": "prettier --write .",
    "format": "yarn run lint:fix && yarn run pretty"
  },
  "devDependencies": {
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.12.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*": "yarn run format"
  }
}
